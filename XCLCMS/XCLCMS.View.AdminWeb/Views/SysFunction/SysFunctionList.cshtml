@{
    Layout = "~/Views/MasterView/Main.cshtml";
}

@model XCLCMS.View.AdminViewModel.SysFunction.SysFunctionListVM

<form>


<div class="XCLPanel" style="margin-top:5px;">
    <div class="XCLPanelHeader">
        @if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Lib.Permission.Function.FunctionEnum.SysFun_Set_SysFunctionAdd)) { 
            <a href="@(string.Format("{0}SysFunction/Add?{1}",XCLCMS.View.AdminWeb.Common.WebCommon.RootURL,XCLCMS.View.AdminWeb.Common.WebCommon.UrlAdditiveParams))" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加</a>
        }
        @if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Lib.Permission.Function.FunctionEnum.SysFun_Set_SysFunctionEdit)) { 
            <a href="@(string.Format("{0}SysFunction/Add?{1}",XCLCMS.View.AdminWeb.Common.WebCommon.RootURL,XCLCMS.View.AdminWeb.Common.WebCommon.UrlAdditiveParams))" id="btnUpdate" class="easyui-linkbutton" data-options="iconCls:'icon-edit'">修改</a>
        }
        @if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Lib.Permission.Function.FunctionEnum.SysFun_Set_SysFunctionDel)) { 
            <a href="javascript:void(0);" id="btnDel" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">删除</a>         
        }
    </div>
    <div class="XCLPanelBody">
        <div>
            @Html.Raw(Model.Search.XCLNetSearchHTML())
        </div>
        <table class="XCLTableList">
            <tr class="XCLTableHeader XCLTableNoHover">
                <td>
                    <input type="checkbox" class="XCLTableCheckAll" value="" />
                </td>
                <td>序号</td>
                <td>功能ID</td>
                <td>所属模块</td>
                <td>功能名称</td>
                <td>说明</td>
                <td>记录状态</td>
                <td>创建时间</td>
                <td>创建者名</td>
                <td>更新时间</td>
                <td>更新人名</td>
            </tr>
            @{
                if (null != Model.SysFunctionList && Model.SysFunctionList.Count > 0)
                {
                    for (int i = 0; i < Model.SysFunctionList.Count; i++)
                    {
                        var m = Model.SysFunctionList[i];
                        <tr>
                            <td align="center"><input type="checkbox" class="XCLTableCheckItem" value="@m.SysFunctionID" /></td>
                            <td align="center">
                                @((Model.PagerModel.PageIndex > 1 ? Model.PagerModel.PageIndex - 1 : 0) * Model.PagerModel.PageSize + i + 1)
                            </td>
                            <td align="center">@m.SysFunctionID</td>
                            <td>@m.C_TypeName</td>
                            <td>@m.FunctionName</td>
                            <td>@m.Remark</td>
                            <td align="center">@XCLNetTools.Enum.EnumHelper.GetEnumDescriptionByText(typeof(XCLCMS.Data.CommonHelper.EnumType.RecordStateEnum), m.RecordState)</td>
                            <td align="center">@string.Format("{0:yyyy-MM-dd HH:mm:ss}", m.CreateTime)</td>
                            <td align="center">@m.CreaterName</td>
                            <td align="center">@string.Format("{0:yyyy-MM-dd HH:mm:ss}", m.UpdateTime)</td>
                            <td align="center">@m.UpdaterName</td>
                        </tr>
                    }
                }
                else
                { 
                    <tr>
                        <td colspan="100" align="center">
                            暂无数据！
                        </td>
                    </tr>
                }
            }

        </table>           

        @Html.Partial("~/Views/UserControl/XCLPager.cshtml", Model.PagerModel)

    </div>
</div>

</form>

<script type="text/javascript">
    $(function () {
        XCLCMS.SysFunction.SysFunctionList.Init();
    });
</script>
